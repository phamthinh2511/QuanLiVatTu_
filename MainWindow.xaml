<Window x:Class="PageNavigation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PageNavigation.ViewModel"
        xmlns:Menu="clr-namespace:PageNavigation.Utilities"
        mc:Ignorable="d"
        xmlns:util="clr-namespace:PageNavigation.Utilities"
        
        util:WindowHelper.EnableDrag="True"
        Title="Quản lý vật tư" 
        MinHeight="800"
        MinWidth="1470"
        WindowState="Maximized"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="Font_Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="tt_Style" TargetType="ToolTip">
            <Setter Property="Placement" Value="Right"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Background" Value="#404D5B"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HasDropShadow" Value="True"/>
        </Style>

        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border x:Name="border" 
                            Height="50" 
                            Background="{TemplateBinding Background}" 
                            BorderThickness="0" 
                            SnapsToDevicePixels="True">
                            <Grid>
                                <Border x:Name="Indicator" 
                                    Height="35" Width="4" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center" 
                                    Background="White" 
                                    CornerRadius="2"
                                    Visibility="Collapsed"/>
                                <Border x:Name="IndicatorT" 
                                    Height="35" Width="4" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center" 
                                    Background="White" 
                                    CornerRadius="2"
                                    Visibility="Collapsed"/>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}" 
                                                  VerticalAlignment="{TemplateBinding VerticalAlignment}" 
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#404D5B"/>
                                <Setter Property="Visibility" TargetName="Indicator" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#404D5B"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:NavigationVM/>
    </Window.DataContext>
    <Border CornerRadius="20"
            BorderThickness="0"
            Background="Transparent">
        <Grid>
            <Grid Background="Black">
                <Border CornerRadius="20"
                        Background="#212529">

                </Border>
                <Grid Margin="65, 0, 0, 0" 
                      x:Name="contentuser">
                    <ContentControl x:Name="Pages"
                                    Content="{Binding CurrentView}"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Name="closebutton"
                            Style="{StaticResource ExitApp}"
                            Grid.Column="1"
                            Height="40"
                            Width="NaN"
                            BorderThickness="0"
                            Click="closebutton_Click" HorizontalAlignment="Stretch" Margin="30,20,20,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/shutdown_mo.png"/>
                        </Button.Background>
                    </Button>

                </Grid>

                <Grid x:Name="navigation_panel"
                      HorizontalAlignment="Left"
                      Width="65"
                      Background="#2E333A">

                    <StackPanel x:Name="stack_panel">

                        <Grid Height="90">

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Margin="73, -20, 0, 0"
                                       Text="M E N U"
                                       Foreground="White"
                                       FontSize="22"
                                       Background="Transparent"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource Font_Style}">

                                <TextBlock.Effect>

                                    <DropShadowEffect BlurRadius="10"
                                                      ShadowDepth="1"
                                                      Direction="-90"
                                                      Color="White"/>
                                </TextBlock.Effect>

                            </TextBlock>

                            <ToggleButton x:Name="togglebutton"
                                          Grid.Column="0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Margin="18, -20, 0, 0"
                                          Height="30"
                                          Width="30"
                                          BorderThickness="0"
                                          Style="{StaticResource ToggleButton_Style}" Unchecked="togglebutton_Unchecked" Checked="togglebutton_Checked">
                                <ToggleButton.Background>
                                    <ImageBrush ImageSource="/Images/MENU.png"
                                            Stretch="Uniform"/>
                                </ToggleButton.Background>
                                <ToggleButton.Triggers>
                                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                        <BeginStoryboard>
                                            <Storyboard x:Name="HideStackPanel">
                                                <DoubleAnimation
                                                    Storyboard.TargetName="navigation_panel"
                                                    Storyboard.TargetProperty="Width"
                                                    BeginTime="0:0:0"
                                                    From="230" To="65"
                                                    Duration="0:0:0.3">
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>

                                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                                        <BeginStoryboard>
                                            <Storyboard x:Name="ShowStackPanel">
                                                <DoubleAnimation
                                                    Storyboard.TargetName="navigation_panel"
                                                    Storyboard.TargetProperty="Width"
                                                    BeginTime="0:0:0"
                                                    From="65" To="230"
                                                    Duration="0:0:0.3">
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ToggleButton.Triggers>
                            </ToggleButton>


                        </Grid>

                        <!--ListViewMenu-->

                        <ListView x:Name="listview"
                                  x:FieldModifier="public"
                                  SelectionMode="Single"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                  SelectedValuePath="Tag"
                                  SelectedValue="{Binding CurrentTag}">

                            <ListViewItem x:Name="menuHome" Tag="Home"
                                          IsSelected="True">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/img_home.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Home" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Home" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>

                            <ListViewItem x:Name="menuNhanVien" Tag="NhanVien">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/icons8-staff-96.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Nhân Viên" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Nhân Viên" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>


                            <ListViewItem x:Name="menuLoaiVatTu" Tag="LoaiVatTu">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/icons8-material-ui-48.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Loại Vật Tư" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Loại Vật Tư" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>

                            <ListViewItem x:Name="menuVatTu" Tag="VatTu">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/img_product.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Vật Tư" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Vật Tư" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>

                            <ListViewItem x:Name="menuKhachHang" Tag="KhachHang">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/img_customer.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Khách Hàng" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Khách Hàng" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>

                            <ListViewItem x:Name="menuHoaDon" Tag="HoaDon">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/img_order.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Hóa Đơn" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Hóa Đơn" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>

                            <ListViewItem x:Name="menuPhieuNhap" Tag="PhieuNhapVatTu">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/icons8-to-do-list-96.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Phiếu Nhập Vật Tư" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Phiếu Nhập Vật tư" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>

                           <!--  <ListViewItem Tag="PhieuThuTien">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/img_transaction.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Phiếu Thu Tiền" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Phiếu Thu Tiền" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem> -->

                            <ListViewItem x:Name="menuTraCuu" Tag="TraCuu">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/icons8-search-100 (1).png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Tra Cứu" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Tra Cứu" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>

                            <ListViewItem x:Name="menuBaoCao" Tag="BaoCao">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Image Source="/Images/icons8-report-100.png" Stretch="Uniform" Width="30" Margin="16,0,0,0"/>
                                    <TextBlock Text="Báo Cáo" Margin="25,0,0,0" Style="{StaticResource Font_Style}"/>
                                </StackPanel>
                                <ListViewItem.ToolTip>
                                    <ToolTip Content="Báo Cáo" Style="{StaticResource tt_Style}"/>
                                </ListViewItem.ToolTip>
                            </ListViewItem>
                        </ListView>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
