<Window x:Class="PageNavigation.View.PopupDetail.HoaDonDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:util="clr-namespace:PageNavigation.Utilities"
        util:WindowHelper.EnableDrag="True"
        mc:Ignorable="d"
        Title="Chi Tiết Hóa Đơn" Height="750" Width="1000"
        AllowsTransparency="True" WindowStyle="None" 
        WindowStartupLocation="CenterScreen" Background="Transparent">

    <Border CornerRadius="20" Background="#212529" BorderBrush="#CED565" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>  <RowDefinition Height="80"/>  <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="80"/>   </Grid.RowDefinitions>

            <TextBlock Text="Chi Tiết Hóa Đơn" Style="{StaticResource Font_Style}" FontSize="35" VerticalAlignment="Center"/>
            <Button Style="{StaticResource ExitApp}" Width="50" Height="50" Click="Button_Close" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Grid>
                    <Ellipse Fill="#2d3135"/>
                    <TextBlock Text="X" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                </Grid>
            </Button>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/> <ColumnDefinition Width="1*"/>   <ColumnDefinition Width="1*"/>   </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Ngày lập:" Foreground="#0bcdff" FontSize="16" Margin="0,0,0,5"/>
                    <Border Height="40" Background="#2d3135" CornerRadius="8">
                        <DatePicker SelectedDate="{Binding CurrentHoaDon.NgayLapHoaDon}"
                                    Width="280" Foreground="#CED565" FontSize="18"
                                    VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                    FontFamily="/Fonts/#Fz Rubik Med" Background="Transparent" BorderThickness="0">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#CED565"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                  VerticalAlignment="Center" 
                                                  HorizontalAlignment="Center"/>
                                                    <TextBlock x:Name="Message" 
                                                               Text="dd/mm/yyyy" 
                                                               Foreground="#50555b" 
                                                               FontSize="20"
                                                               VerticalAlignment="Center" 
                                                               HorizontalAlignment="Center"
                                                               IsHitTestVisible="False"
                                                               Visibility="Collapsed"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter TargetName="Message" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                    <TextBlock Text="Nhân viên:" Foreground="#0bcdff" FontSize="16" Margin="0,0,0,5"/>
                    <Border Height="40" Background="#2d3135" CornerRadius="8">
                        <ComboBox ItemsSource="{Binding DanhSachNhanVien}"
                                  SelectedValue="{Binding CurrentHoaDon.MaNhanVien}"
                                  SelectedValuePath="MaNhanVien"
                                  DisplayMemberPath="HoTen"
                                  Foreground="#CED565" FontSize="16" Background="Transparent" Style="{StaticResource ComboBoxStyle}"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <TextBlock Text="Khách hàng:" Foreground="#0bcdff" FontSize="16" Margin="0,0,0,5"/>
                    <Border Height="40" Background="#2d3135" CornerRadius="8">
                        <ComboBox ItemsSource="{Binding DanhSachKhachHang}"
                                  SelectedValue="{Binding CurrentHoaDon.MaKhachHang}"
                                  SelectedValuePath="MaKhachHang"
                                  DisplayMemberPath="HoVaTen"
                                  Foreground="#CED565" FontSize="16" Background="Transparent" Style="{StaticResource ComboBoxStyle}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <Border Grid.Row="2" Background="#17191a" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                <StackPanel>
                    <TextBlock Text="Thêm vật tư:" FontSize="22" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="Tên vật tư:" Foreground="#0bcdff"/>
                            <Border Height="40" Background="#2d3135" CornerRadius="8" Margin="0,5,0,0">
                                <ComboBox x:Name="cboVatTu" 
                                          ItemsSource="{Binding DanhSachVatTu}"
                                          SelectedValue="{Binding CurrentChiTiet.MaVatTu}"
                                          SelectedValuePath="MaVatTu"
                                          DisplayMemberPath="TenVatTu"
                                          SelectionChanged="CboVatTu_SelectionChanged"
                                          Foreground="#CED565" FontSize="16" Background="Transparent" Style="{StaticResource ComboBoxStyle}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,5,10">
                            <TextBlock Text="Số lượng:" Foreground="#0bcdff"/>
                            <Border Height="40" Background="#2d3135" CornerRadius="8" Margin="0,5,0,0">
                                <TextBox Text="{Binding CurrentChiTiet.SoLuongBan}"
                                         Style="{StaticResource TextBoxStyle}"
                                         Foreground="#CED565" FontSize="16" VerticalContentAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,10">
                            <TextBlock Text="Đơn vị tính:" Foreground="#0bcdff"/>
                            <Border Height="40" Background="#2d3135" CornerRadius="8" Margin="0,5,0,0">
                                <ComboBox ItemsSource="{Binding DanhSachDonViTinh}"
                                          SelectedValue="{Binding CurrentChiTiet.MaDonViTinh}"
                                          SelectedValuePath="MaDonViTinh"
                                          DisplayMemberPath="TenDonViTinh"
                                          Foreground="#CED565" FontSize="16" Background="Transparent" Style="{StaticResource ComboBoxStyle}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Đơn giá (Giá Bán):" Foreground="#0bcdff"/>
                            <Border Height="40" Background="#2d3135" CornerRadius="8" Margin="0,5,0,0">
                                <TextBox Text="{Binding CurrentChiTiet.DonGiaBan, StringFormat=N0}"
                                         Style="{StaticResource TextBoxStyle}"
                                         Foreground="#CED565" FontSize="16" VerticalContentAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,22,0,0">

                            <Button Content="Xóa chọn" Click="ButtonXoaChon_Click"
                                    Width="90" Height="45" Margin="0,0,10,0"
                                    Background="#3E444A" Foreground="#ff4d4d" FontWeight="Bold" FontSize="16">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Content="Thêm/Cập Nhật" Click="ButtonThem_Click"
                                    Width="130" Height="45"
                                    Background="#CED565" Foreground="#212529" FontWeight="Bold" FontSize="16">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Chi tiết hóa đơn:" FontSize="22" Foreground="White" FontWeight="Bold" Margin="0,10,0,5"/>

                <ListView x:Name="lvChiTiet"
                          SelectionChanged="lvChiTiet_SelectionChanged"
                          Grid.Row="1" 
                          ItemsSource="{Binding ListChiTietHienThi}"
                          Background="Transparent" BorderThickness="0" Foreground="#CED565" FontSize="16">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource CustomHeader_Style}">
                            <GridViewColumn Header="Tên vật tư" Width="250" DisplayMemberBinding="{Binding TenVatTu}"/>
                            <GridViewColumn Header="SL" Width="80" DisplayMemberBinding="{Binding SoLuongBan}"/>
                            <GridViewColumn Header="ĐVT" Width="100" DisplayMemberBinding="{Binding TenDonViTinh}"/>
                            <GridViewColumn Header="Đơn giá" Width="220" DisplayMemberBinding="{Binding DonGiaBan, StringFormat=N0}"/>
                            <GridViewColumn Header="Thành tiền" Width="250" DisplayMemberBinding="{Binding ThanhTien, StringFormat=N0}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Grid Grid.Row="4" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">

                    <TextBlock Text="TỔNG TIỀN: " Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentPhieuNhap.TongTien, StringFormat=N0}" Foreground="#CED565" FontSize="25" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,200,0"/>

                    <Border Background="#2d3135" CornerRadius="10" BorderThickness="0"/>
                    <Button FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Style="{StaticResource BtnStyle}" Width="60" Height="60" Click="ButtonCancel_Click" Margin="0,0,10,0">
                        <Image Source="/Images/CancelButton.png" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" Margin="10,5,0,0"/>
                    </Button>

                    <Button x:Name="btnSave" 
                            IsEnabled="False" 
                            FontSize="40" 
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                            Width="60" 
                            Click="ButtonSave_Click" VerticalAlignment="Stretch">   

                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource BtnStyle}">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Image Source="/Images/SaveButton.png" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" Margin="10,5,0,0"/>
                    </Button>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Window>