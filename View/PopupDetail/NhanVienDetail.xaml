<Window x:Class="PageNavigation.View.PopupDetail.NhanVienDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       
        xmlns:helpers="clr-namespace:PageNavigation.Helpers"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PageNavigation.ViewModel"
        mc:Ignorable="d"
        Title="NhanVienDetail"
        Height="550" Width="650"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Grid Background="Transparent">

        <!-- MAIN WRAPPER -->
        <Border CornerRadius="20"
        BorderThickness="3"
        BorderBrush="#8B5A2B"
        Background="#EFE6D8"/>


        <!-- EXIT BUTTON -->
        <Grid Height="60" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="560,20,0,0">
            <Border Background="#D2B48C" CornerRadius="10"/>
            <Button Style="{StaticResource ExitApp}" Width="60" Height="60" Click="Button_Click"/>
        </Grid>

        <!-- HEADER -->
        <Grid Height="60" Width="520" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0">
            <Border Background="#D2B48C" CornerRadius="10"/>
            <TextBlock Text="Nhân Viên :" Foreground="#2F2A25" Style="{StaticResource Text_Style}"/>
        </Grid>

        <!-- Mã nhân viên nếu có -->
        <TextBlock x:Name="txtMaNhanVien"
                   Text="{Binding CurrentEmployee.MaNhanVien}"
                   Foreground="#8B5A2B"
 FontSize="40"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,30,0,0"
                   FontFamily="/Fonts/#Fz Rubik Med"/>

        <!-- NGÀY NHẬN VIỆC -->
        <TextBlock Text="Ngày Nhận Việc:" Style="{StaticResource Text_Style}"
                   Foreground="#2F2A25"
 FontSize="20" Margin="30,95,0,0"
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Grid Height="60" Width="280" Margin="25, 70,360,330">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="203*"/>
                <ColumnDefinition Width="17*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#2d3135" CornerRadius="10" BorderThickness="0"/>

            <DatePicker
        x:Name="dpNgayNhanViec"
        xml:lang="vi-VN"
        SelectedDate="{Binding NgayNhanViecDateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"

        BorderThickness="0"
        Background="#FAF7F2"
        Foreground="#2F2A25"

        Height="60"
        FontSize="26"
        VerticalContentAlignment="Center"
        HorizontalContentAlignment="Center"
        FontFamily="/Fonts/#Fz Rubik Med">

                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#CED565"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                                    <Grid>
                                        <ScrollViewer x:Name="PART_ContentHost"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="Message"
                                           Text="dd/mm/yyyy"
                                           Foreground="#50555b"
                                           FontSize="20"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter TargetName="Message" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
        </Grid>

        <!-- HỌ TÊN -->
        <TextBlock Text="Họ Tên:" Style="{StaticResource Text_Style}"
                   Foreground="#2F2A25"
 FontSize="20" Margin="355,95,0,0" VerticalAlignment="Top"/>

        <Grid Height="60" Width="260" Margin="330,10,20,270">
            <Border Background="#FAF7F2" CornerRadius="10"/>
            <TextBox x:Name="txtHoTen"
                    Text="{Binding CurrentEmployee.HoTen, Mode=TwoWay}"
                     Style="{StaticResource TextBoxStyle}"
                     Foreground="#2F2A25"

                     Background="Transparent"
                     FontSize="26"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     FontFamily="/Fonts/#Fz Rubik Med"/>
        </Grid>

        <!-- SỐ ĐIỆN THOẠI -->
        <TextBlock Text="Số Điện Thoại:" Style="{StaticResource Text_Style}"
                   Foreground="#2F2A25"
 FontSize="20"
                   Margin="30,190,0,0" VerticalAlignment="Top" Width="151"/>

        <Grid Height="60" Width="260" Margin="20,110,360,170">
            <Border Background="#FAF7F2" CornerRadius="10"/>
            <TextBox x:Name="txtSDT"
                     Text="{Binding CurrentEmployee.SoDienThoai, Mode=TwoWay}"
                     Style="{StaticResource TextBoxStyle}"
                     Foreground="#2F2A25"
 Background="Transparent"
                     FontSize="26"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     FontFamily="/Fonts/#Fz Rubik Med"/>
        </Grid>

        <!-- TÊN ĐĂNG NHẬP -->
        <TextBlock Text="Tên Đăng Nhập:" Style="{StaticResource Text_Style}"
                   Foreground="#2F2A25"
 FontSize="20"
                   Margin="355,190,0,0" VerticalAlignment="Top"/>

        <Grid Height="60" Width="260" Margin="330,110,20,170">
            <Border Background="#FAF7F2" CornerRadius="10"/>
            <TextBox x:Name="txtUsername"
                    Text="{Binding CurrentEmployee.Username, Mode=TwoWay}"
                     Style="{StaticResource TextBoxStyle}"
                     Foreground="#2F2A25"
 Background="Transparent"
                     FontSize="26"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     FontFamily="/Fonts/#Fz Rubik Med" TextChanged="TextBox_TextChanged"/>
        </Grid>

        <!-- MẬT KHẨU -->
        <TextBlock Text="Mật Khẩu:" Style="{StaticResource Text_Style}"
                   Foreground="#2F2A25"
 FontSize="20"
                   Margin="30,296,0,0" VerticalAlignment="Top"/>

        <Grid Height="60" Width="260" Margin="20,220,360,65">
            <Border Background="#FAF7F2" CornerRadius="10"/>
            <PasswordBox x:Name="txtPassword"
                         helpers:PasswordBoxHelper.BoundPassword="{Binding CurrentEmployee.Password, Mode=TwoWay}"
                         helpers:PasswordBoxHelper.BoundSecurePassword="{Binding MatKhauSecure, Mode=TwoWay}"
                         Style="{StaticResource PasswordBoxStyle}"
                         Foreground="#2F2A25"

                         Background="Transparent"
                         FontSize="26"
                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         FontFamily="/Fonts/#Fz Rubik Med"/>
        </Grid>

        <!-- CHỨC VỤ -->
        <TextBlock Text="Chức Vụ:" Style="{StaticResource Text_Style}"
                   Foreground="#2F2A25"
 FontSize="20"
                   Margin="355,296,0,0" VerticalAlignment="Top"/>

        <Grid Height="60" Width="260" Margin="330,220,20,65">
            <Border Background="#FAF7F2" CornerRadius="10"/>
            <ComboBox x:Name="cbChucVu"
          SelectedValue="{Binding CurrentEmployee.ChucVu}"
          SelectedValuePath="Tag"
          Foreground="#2F2A25"

          Background="Transparent"
          FontSize="26"
          Style="{StaticResource ComboBoxStyle}"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center">

                <ComboBoxItem Content="NV Bán hàng" Tag="NV Bán hàng"/>
                <ComboBoxItem Content="Thủ Kho" Tag="Thủ Kho"/>
                <ComboBoxItem Content="Quản Lý" Tag="Quản Lý"/>

            </ComboBox>
        </Grid>

        <!-- NGÀY SINH -->
        <TextBlock Text="Ngày Sinh:" Style="{StaticResource Text_Style}"
           Foreground="#2F2A25"
 FontSize="20"
           Margin="30,400,0,0"
           VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Grid Height="60" Width="280" Margin="25,430,360,60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="203*"/>
                <ColumnDefinition Width="17*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#FAF7F2" CornerRadius="10" BorderThickness="0"/>

            <DatePicker x:Name="dpNgaySinh"
        xml:lang="vi-VN"
        SelectedDate="{Binding NgaySinhDateTime, Mode=TwoWay}"
        BorderThickness="0"
        Background="Transparent"
        Foreground="#2F2A25"

        Height="60"
        FontSize="26"
        VerticalContentAlignment="Center"
        HorizontalContentAlignment="Center"
        FontFamily="/Fonts/#Fz Rubik Med">

                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#CED565"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                                    <Grid>
                                        <ScrollViewer x:Name="PART_ContentHost"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="Message"
                                           Text="dd/mm/yyyy"
                                           Foreground="#50555b"
                                           FontSize="20"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter TargetName="Message" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
        </Grid>

        <!-- SAVE BUTTON -->
        <Grid Height="60" Width="60" Margin="560,480,0,0"
              VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border Background="#2d3135" CornerRadius="10"/>
            <Button x:Name="btnSave"
                    IsEnabled="True"
                    Width="60" Height="60"
                    Style="{StaticResource BtnStyle}"
                    Click="ButtonSave_Click">

                <Image Source="/Images/SaveButton.png"
                       Width="40" Height="40" Margin="10,5,180,0"/>
            </Button>
        </Grid>

        <!-- CANCEL BUTTON -->
        <Grid Height="60" Width="60" Margin="480,480,0,0"
              VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border Background="#2d3135" CornerRadius="10"/>
            <Button Width="60" Height="60"
                    Style="{StaticResource BtnStyle}"
                    Click="ButtonCancel_Click">
                <Image Source="/Images/CancelButton.png"
                       Width="40" Height="40" Margin="10,5,180,0"/>
            </Button>
        </Grid>

    </Grid>
</Window>
