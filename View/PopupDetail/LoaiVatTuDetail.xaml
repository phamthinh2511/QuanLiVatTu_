<Window x:Class="PageNavigation.View.PopupDetail.LoaiVatTuDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PageNavigation.ViewModel"
        mc:Ignorable="d"
        Title="LoaiVatTuDetail"
        Height="500" Width="650"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Grid Background="Transparent">

        <!-- MAIN WRAPPER -->
        <Border CornerRadius="20"
        BorderThickness="3"
        BorderBrush="#8B5A2B"
        Background="#EFE6D8"/>


        <!-- EXIT BUTTON -->
        <Grid Height="60" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="560,20,0,0">
            <Border Background="#D2B48C"
CornerRadius="10"/>
            <Button Style="{StaticResource ExitApp}"
                    Width="60" Height="60"
                    Click="Button_Close"/>
        </Grid>

        <!-- HEADER -->
        <Grid Height="60" Width="520" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0">
            <Border Background="#D2B48C"
 CornerRadius="10"/>
            <TextBlock Text="Loại Vật Tư :" Foreground="#2F2A25"

                       Style="{StaticResource Text_Style}"/>
        </Grid>

        <!-- MÃ LOẠI VẬT TƯ – Tựa đề chính -->
        <TextBlock x:Name="txtMaLoai"
                   Text="{Binding CurrentLoaiVatTu.MaLoai}"
                   Foreground="#8B5A2B"

                   FontSize="40"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,30,0,0"
                   FontFamily="/Fonts/#Fz Rubik Med"/>

        <!-- TÊN LOẠI -->
        <TextBlock Text="Tên Loại:" Style="{StaticResource Text_Style}"
                   Foreground="#2F2A25"
 FontSize="20"
                   Margin="30,120,0,0" VerticalAlignment="Top"/>

        <Grid Height="60" Width="580"
              Margin="30,145,40,0"
              VerticalAlignment="Top">
            <Border Background="#FAF7F2"
 CornerRadius="10"/>
            <TextBox x:Name="txtTenLoai"
                    TextChanged="Form_Changed"
                    Text="{Binding CurrentLoaiVatTu.TenLoai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource TextBoxStyle}"
                    Foreground="#2F2A25"

                    Background="Transparent"
                    FontSize="26"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="/Fonts/#Fz Rubik Med"/>
                        </Grid>

        <!-- MÔ TẢ -->
        <TextBlock Text="Mô tả:" Style="{StaticResource Text_Style}"
                   Foreground="#2F2A25"
 FontSize="20"
                   Margin="30,230,0,0"
                   VerticalAlignment="Top"/>

        <Grid Height="150" Width="580"
              Margin="20,260,30,0"
              VerticalAlignment="Top">
            <Border Background="#FAF7F2"
 CornerRadius="10"/>
            <TextBox x:Name="txtMoTa"
                    Text="{Binding CurrentLoaiVatTu.MoTa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource TextBoxStyle}"
                    Foreground="#2F2A25"

                    Background="Transparent"
                    FontSize="26"
                    VerticalContentAlignment="Top"
                    HorizontalContentAlignment="Left"
                    TextWrapping="Wrap" 
                    AcceptsReturn="True"
                    FontFamily="/Fonts/#Fz Rubik Med"/>
        </Grid>



        <!-- SAVE BUTTON -->
        <Grid Height="60" Width="60"
              Margin="560,420,0,0"
              VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border Background="#2d3135" CornerRadius="10"/>
            <Button x:Name="btnSave"
                    Width="60" Height="60"
                    Style="{StaticResource BtnStyle}"
                    Click="ButtonSave_Click"
                    IsEnabled="True" VerticalAlignment="Top">

                <Image Source="/Images/SaveButton.png"
                       Width="40" Height="40" Margin="10,0,178,0" VerticalAlignment="Bottom"/>
            </Button>
        </Grid>

        <!-- CANCEL BUTTON -->
        <Grid Height="60" Width="60"
              Margin="480,420,0,0"
              VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border Background="#2d3135" CornerRadius="10"/>
            <Button x:Name="btnCancle"
                Width="60" Height="60"
                    Style="{StaticResource BtnStyle}"
                    Click="ButtonCancel_Click">
                <Image Source="/Images/CancelButton.png"
                       Width="40" Height="40" Margin="10,10,178,0" RenderTransformOrigin="0.469,0.152"/>
            </Button>
        </Grid>

    </Grid>
</Window>
