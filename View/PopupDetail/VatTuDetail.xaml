<Window x:Class="PageNavigation.View.PopupDetail.VatTuDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PageNavigation.ViewModel"
        mc:Ignorable="d"
        Title="VatTuDetail" Height="450" Width="640"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Grid Background="Transparent">

        <!-- Nền đen bo góc -->
        <Border CornerRadius="20"
                BorderThickness="0"
                Background="#010c1f"/>

        <!-- Nút đóng -->
        <Grid Height="60" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left"
              Margin="560,20,0,0">
            <Border Background="#2d3135" CornerRadius="10"/>
            <Button Style="{StaticResource ExitApp}" Width="60" Height="60" Click="Button_Close"/>
        </Grid>

        <!-- Header -->
        <Grid Height="60" Width="520" VerticalAlignment="Top" HorizontalAlignment="Left"
              Margin="20,20,0,0">
            <Border Background="#2d3135" CornerRadius="10"/>
            <TextBlock Text="Vật Tư :" Foreground="#ffff" Style="{StaticResource Text_Style}"/>
        </Grid>

        <!-- Mã vật tư (nếu có) -->
        <TextBlock Text="{Binding VatTu.MaVatTu}"
                   Foreground="#CED565" FontSize="40"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,30,0,0"
                   FontFamily="/Fonts/#Fz Rubik Med"/>

        <!-- Label tên vật tư -->
        <TextBlock Text="Tên vật tư:"
                   FontSize="20" Foreground="#0bcdff"
                   Style="{StaticResource Text_Style}"
                   Margin="30,95,0,0"
                   HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- TextBox tên vật tư -->
        <Grid Height="60" Width="260" Margin="20,120,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border Background="#2d3135" CornerRadius="10"/>
            <TextBox x:Name="txtTenVatTu"
                     Text="{Binding VatTu.TenVatTu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   
                     Style="{StaticResource TextBoxStyle}"
                     Foreground="#CED565" Background="Transparent"
                     Width="260" Height="60" FontSize="26"
                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                     FontFamily="/Fonts/#Fz Rubik Med"/>
        </Grid>

        <!-- Label loại vật tư -->
        <TextBlock Text="Loại vật tư:"
                   FontSize="20" Foreground="#0bcdff"
                   Style="{StaticResource Text_Style}"
                   Margin="330,95,0,0"
                   HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- ComboBox loại vật tư -->
        <Grid Height="60" Width="260" Margin="330,120,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border Background="#2d3135" CornerRadius="10"/>
            <ComboBox
    x:Name="cbLoaiVatTu"
    ItemsSource="{Binding DanhSachLoaiVatTu}"
    DisplayMemberPath="TenLoai"
    SelectedValuePath="MaLoai"
    SelectedValue="{Binding VatTu.MaLoai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Foreground="#CED565"
    Background="Transparent"
    Width="260" Height="60" FontSize="26"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center"
    FontFamily="/Fonts/#Fz Rubik Med"
    Style="{StaticResource ComboBoxStyle}"
/>



        </Grid>
        <!-- Label đơn vị tính -->
        <TextBlock Text="Đơn vị tính:"
           FontSize="20"
           Foreground="#0bcdff"
           Style="{StaticResource Text_Style}"
           Margin="330,190,0,0"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"/>

        <!-- ComboBox đơn vị tính -->
        <Grid Height="60"
      Width="260"
      Margin="330,215,0,0"
      HorizontalAlignment="Left"
      VerticalAlignment="Top">

            <Border Background="#2d3135" CornerRadius="10"/>

            <ComboBox
         x:Name="cbDonViTinh"
        ItemsSource="{Binding DanhSachDonViTinh}"
        DisplayMemberPath="TenDonViTinh"
        SelectedValuePath="MaDonViTinh"
        SelectedValue="{Binding VatTu.MaDonViTinh, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        Foreground="#CED565"
        Background="Transparent"
        Width="260"
        Height="60"
        FontSize="26"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        FontFamily="/Fonts/#Fz Rubik Med"
        Style="{StaticResource ComboBoxStyle}"/>
        </Grid>


        <!-- Label mô tả -->
        <TextBlock Text="Mô tả:"
                   FontSize="20" Foreground="#0bcdff"
                   Style="{StaticResource Text_Style}"
                   Margin="30,260,0,170" VerticalAlignment="Stretch"/>

        <!-- TextBox mô tả -->
        <Grid Height="140" Width="570" Margin="20,230,0,0"
              HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="262*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#2d3135" CornerRadius="10" Margin="0,54,0,0" Grid.ColumnSpan="2"/>
            <TextBox x:Name="txtMoTa"
                     Text="{Binding VatTu.MoTa, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Style="{StaticResource TextBoxStyle}"
                     Foreground="#CED565" Background="Transparent"
                     Width="560" Height="110" FontSize="22"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="/Fonts/#Fz Rubik Med" Grid.ColumnSpan="2" Margin="5,15,5,15"/>
        </Grid>

        <!-- Nút lưu -->
        <Grid Height="60" Width="60" Margin="560,380,0,0"
      VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border Background="#2d3135" CornerRadius="10"/>
            <Button x:Name="btnSave"
            IsEnabled="True"
            Width="60" Height="60"
            Style="{StaticResource BtnStyle}"
            Click="ButtonSave_Click" HorizontalAlignment="Right">

                <Image Source="/Images/SaveButton.png"
               Width="40" Height="40" Margin="10,5,180,0" RenderTransformOrigin="0.89,-0.081"/>
            </Button>
        </Grid>

        <!-- Nút hủy -->
        <Grid Height="60" Width="60"
              Margin="480,380,0,0"
              VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border Background="#2d3135" CornerRadius="10"/>
            <Button Width="60" Height="60"
                    Style="{StaticResource BtnStyle}"
                    Click="ButtonCancel_Click">
                <Image Source="/Images/CancelButton.png"
                       Stretch="Uniform"
                       Width="40" Height="40" Margin="10,0,180,0"/>
            </Button>
        </Grid>

    </Grid>
</Window>
