<UserControl x:Class="PageNavigation.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PageNavigation.View"
             xmlns:bcd="clr-namespace:PageNavigation.View.BaoCaoDetail"
             xmlns:UserControl="clr-namespace:PageNavigation.View.HomeUserControl"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1440"
             Background="#EFE6D8"
             Style="{StaticResource Page_Style}">
    <UserControl.Resources>
        <Style TargetType="DatePicker">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#efe6d8">
        <StackPanel Orientation="Horizontal">
            <UserControl:DashBoardButton 
                x:Name="DoanhThuButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="500"
                Height="150"
                Margin="55, 70"
    
                Title="Doanh Thu Tháng"

                Icon="/Images/cashhome.png"

                Number="{Binding DoanhThuThangNay, StringFormat={}{0:N0} VNĐ}"/>
        </StackPanel>
        <Grid Width="500" Height="500" Margin="55, 0, 0, 20"
              HorizontalAlignment="Left"
              VerticalAlignment="Bottom">
            <Border CornerRadius="20" 
                    Background="#CDB38B" 
                    BorderBrush="Transparent" 
                    BorderThickness="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border BorderBrush="LightGray"
                                BorderThickness="0, 0, 0 ,1">
                            <TextBlock Text="Vật Tư"
                                       FontFamily="/Fonts/#Fz Rubik Mid"
                                       FontWeight="Bold"
                                       Foreground="#2F2A25"
                                       FontSize="30"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="20, 0, 0, 0">

                            </TextBlock>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Border BorderBrush="#2F2A25"
                                BorderThickness="0, 0, 0 ,1">
                            <ListView x:Name="lvSanPham" 
                                      DataContext="{Binding SanPhamVM}" 
                                      ItemsSource="{Binding DanhSachVatTu}"
                                      Background="#FAF7F2"
                                      AlternationCount="2">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border x:Name="bd" 
                                                            Background="White"
                                                            BorderThickness="0"
                                                            CornerRadius="0" >
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                    </Border>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                                            <Setter TargetName="bd" Property="Background" Value="#A88E63"/>
                                                        </Trigger>
                                                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                            <Setter TargetName="bd" Property="Background" Value="#8F764D"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#B89D73"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>

                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#B89D73"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Image Source="/Images/product_page.png" 
                                                   Width="50" Height="50"
                                                   Stretch="Uniform"
                                                   Margin="0,0,10,0"/>

                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding TenVatTu}" 
                                                           FontWeight="Bold"
                                                           Foreground="Snow"
                                                           FontSize="14"/>

                                                <TextBlock Text="{Binding SoLuongTon, StringFormat='Tồn kho: {0}'}" 
                                                           Foreground="Red"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button BorderBrush="Transparent"
                                HorizontalContentAlignment="Left"
                                Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="VatTu">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="0, 0, 20, 20">
                                        <ContentPresenter HorizontalAlignment="Left" 
                                                          VerticalAlignment="Center" 
                                                          Margin="20,0,0,0"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#efe6d8"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Content>
                                <TextBlock x:Name="xem"
                                           Text="Xem >"
                                           FontSize="20"
                                           FontFamily="/Fonts/#Fz Rubik Med"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Grid Margin="55" Height="690" Width="750"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Background="#efe6d8"
              DataContext="{Binding ChartVM}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Foreground="Gray"/>
                    <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Đến ngày:" VerticalAlignment="Center" Foreground="Gray" Margin="10,0,0,0"/>
                    <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <TextBlock Text="Doanh Thu Theo Kỳ" FontSize="24" 
                           Foreground="DarkViolet" 
                           HorizontalAlignment="Left"
                           FontFamily="/Fonts/#Fz Rubik Med"/>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0,0,0,30">
                <TextBlock Text="TỔNG DOANH THU" 
                           FontFamily="/Fonts/#Fz Rubik Med"
                           FontSize="14" Foreground="Green" Opacity="0.8"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="{Binding TotalRevenue, StringFormat={}{0:N0} VNĐ}" 
                           FontSize="28" FontWeight="Bold" Foreground="#2196F3"/>

                    <Border Margin="15,0,0,0" VerticalAlignment="Bottom" Padding="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsGrowth}" Value="True">
                                                <Setter Property="Foreground" Value="#10B981"/>
                                                <Setter Property="Text" Value="▲ "/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsGrowth}" Value="False">
                                                <Setter Property="Foreground" Value="#EF4444"/>
                                                <Setter Property="Text" Value="▼ "/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Text="{Binding PercentChange, StringFormat={}{0:N2}%}" 
                                   FontSize="16" FontWeight="Bold" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsGrowth}" Value="True">
                                                <Setter Property="Foreground" Value="#10B981"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsGrowth}" Value="False">
                                                <Setter Property="Foreground" Value="#EF4444"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock FontFamily="/Fonts/#Fz Rubik Med"
                                Text=" So với cùng kỳ" Foreground="Red" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="14"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <lvc:CartesianChart Grid.Row="2" 
                                x:Name="chart"
                                Series="{Binding ChartSeries}" 
                                LegendLocation="Top">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Labels="{Binding ChartLabels}">
                        <lvc:Axis.Separator>
                            <lvc:Separator IsEnabled="False"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>
                    <lvc:Axis LabelFormatter="{Binding YFormatter}" MinValue="0">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="1" Stroke="#E5E7EB" Step="500000"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>

                <lvc:CartesianChart.DataTooltip>
                    <lvc:DefaultTooltip SelectionMode="SharedXValues" Background="White" Foreground="Black" BulletSize="10"/>
                </lvc:CartesianChart.DataTooltip>
            </lvc:CartesianChart>

        </Grid>
    </Grid>

</UserControl>