<UserControl x:Class="PageNavigation.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PageNavigation.View"
             xmlns:bcd="clr-namespace:PageNavigation.View.BaoCaoDetail"
             xmlns:UserControl="clr-namespace:PageNavigation.View.HomeUserControl"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1215"
             Background="#212529">
    
    <Grid>
        <StackPanel Orientation="Horizontal">
            <UserControl:DashBoardButton HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     x:Name="DoanhThuButton"
                                     Width="300"
                                     Height="150"
                                     Margin="52.5, 70" Loaded="DoanhThuButton_Loaded"/>
            <UserControl:DashBoardButton HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     x:Name="DonHangButton"
                                     Width="300"
                                     Height="150"
                                     Margin="52.5, 70" Loaded="DonHangButton_Loaded"/>
            <UserControl:DashBoardButton HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     x:Name="DonHangChuaXuLiButton"
                                     Width="300"
                                     Height="150"
                                     Margin="52.5, 70" Loaded="DonHangChuaXuLiButton_Loaded"/>
        </StackPanel>
        <Grid Width="450" Height="500" Margin="30"
              HorizontalAlignment="Left"
              VerticalAlignment="Bottom">
            <Border CornerRadius="20" 
                    Background="#1E1E1E" 
                    BorderBrush="Transparent" 
                    BorderThickness="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border BorderBrush="LightGray"
                                BorderThickness="0, 0, 0 ,1">
                            <TextBlock Text="Vật Tư"
                                       FontFamily="/Fonts/#Fz Rubik Mid"
                                       FontWeight="Bold"
                                       Foreground="Blue"
                                       FontSize="30"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="20, 0, 0, 0">

                            </TextBlock>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Border BorderBrush="LightGray"
                                BorderThickness="0, 0, 0 ,1">
                            <ListView x:Name="lvSanPham" 
                                      ItemsSource="{Binding ListProducts}"
                                      Background="Transparent"
                                      AlternationCount="2">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border x:Name="bd" 
                                                            Background="#2D2D2D"
                                                            BorderThickness="0"
                                                            CornerRadius="0" >
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                    </Border>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                                            <Setter TargetName="bd" Property="Background" Value="#17191a"/>
                                                        </Trigger>
                                                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                            <Setter TargetName="bd" Property="Background" Value="#3E444A"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#3D3D3D"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>

                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="Black"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Image Source="/Images/product_page.png" 
                                                   Width="50" Height="50"
                                                   Stretch="Uniform"
                                                   Margin="0,0,10,0"/>

                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding TenVatTu}" 
                                                           FontWeight="Bold"
                                                           FontSize="14"/>

                                                <TextBlock Text="{Binding SoLuongTon, StringFormat='Tồn kho: {0}'}" 
                                                           Foreground="Red"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button BorderBrush="Transparent"
                            HorizontalContentAlignment="Left">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="0, 0, 20, 20">
                                        <ContentPresenter HorizontalAlignment="Left" 
                                                      VerticalAlignment="Center" 
                                                      Margin="20,0,0,0"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="DarkGray"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#121212"/>
                                            <Setter Property="Foreground" Value="#F5F5F5"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Content>
                                <TextBlock x:Name="xem"
                                       Text="Xem >"
                                       FontSize="20"
                                       FontFamily="/Fonts/#Fz Rubik Med"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</UserControl>