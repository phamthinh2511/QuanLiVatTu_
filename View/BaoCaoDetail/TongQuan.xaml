<UserControl x:Class="PageNavigation.View.BaoCaoDetail.TongQuan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PageNavigation.View.BaoCaoDetail"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="White" Margin="0, 0, 20, 0">
            <lvc:CartesianChart Series="{Binding SeriesCollection}" 
                        LegendLocation="Top"
                        DisableAnimations="False"
                        AnimationsSpeed="0:0:0.3">

                <lvc:CartesianChart.Resources>
                    <Style TargetType="lvc:ColumnSeries">
                        <Setter Property="StrokeThickness" Value="0"></Setter>
                    </Style>
                </lvc:CartesianChart.Resources>

                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Labels="{Binding BarLabels}" LabelsRotation="-15">
                        <lvc:Axis.Separator>
                            <lvc:Separator Step="1" StrokeThickness="0"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>
                    <lvc:Axis LabelFormatter="{Binding Formatter}" Title="Đơn vị tính">
                        <lvc:Axis.Separator>
                            <lvc:Separator Stroke="#E5E5E5" StrokeDashArray="2"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="2" Background="White" Margin="20, 0, 0, 0">
            <lvc:PieChart Series="{Binding SeriesCollection1}" 
                  LegendLocation="Bottom" 
                  InnerRadius="0"
                  Hoverable="True"
                  DisableAnimations="False" 
                  AnimationsSpeed="0:0:0.5">
                <lvc:PieChart.DataTooltip>
                    <lvc:DefaultTooltip SelectionMode="OnlySender" />
                </lvc:PieChart.DataTooltip>
            </lvc:PieChart>
        </Grid>
    </Grid>
</UserControl>
