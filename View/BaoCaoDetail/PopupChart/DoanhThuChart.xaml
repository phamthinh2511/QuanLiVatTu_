<Window x:Class="PageNavigation.View.BaoCaoDetail.PopupChart.DoanhThuChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PageNavigation.View.BaoCaoDetail.PopupChart"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Chi Tiết Hóa Đơn" Height="750" Width="1000"
        AllowsTransparency="True" WindowStyle="None" 
        WindowStartupLocation="CenterScreen" Background="Transparent">

    <Window.Resources>
        <Style x:Key="Text_Style" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border CornerRadius="20"
                BorderThickness="0"
                Background="#ffff"
                Grid.RowSpan="4"/>

        <Grid Height="60" Width="Auto" 
              VerticalAlignment="Top" HorizontalAlignment="Left" 
              Background="Transparent" 
              Margin="20, 10, 0, 0" 
              Grid.Row="0">

            <Border Background="White" CornerRadius="10" BorderThickness="0"/>

            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock Text="Báo Cáo Doanh Thu: " Foreground="Black" Style="{StaticResource Text_Style}"
                           FontSize="30" FontFamily="/Fonts/#Fz Rubik Med"/>
                <TextBlock Text="{Binding NamBaocao}" Foreground="Black" Style="{StaticResource Text_Style}"
                           FontSize="30" FontFamily="/Fonts/#Fz Rubik Med"/>
            </StackPanel>
            <Grid Height="60" Width="60" VerticalAlignment="Center" HorizontalAlignment="Left" Background="Transparent" Margin="902,0,0,0">
                <Border Background="White" CornerRadius="10" BorderThickness="0"/>
                <Button Style="{StaticResource ExitApp}" Width="60" Height="60" Click="Button_Click"/>
            </Grid>
        </Grid>
        <Grid Width="Auto" Margin="0,80,0,20" Grid.RowSpan="2">
            

            <Border Background="White" 
                CornerRadius="20" 
                Padding="30"
                Width="1000" Height="640"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Margin="20">

                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <lvc:PieChart Grid.Row="1" 
                                  Series="{Binding ChartSeries}" 
                                  LegendLocation="Right" 
                                  InnerRadius="0"
                                  Hoverable="True"
                                  AnimationsSpeed="0:0:0.8">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend BulletSize="15" FontSize="14" Foreground="#374151"/>
                        </lvc:PieChart.ChartLegend>

                        <lvc:PieChart.DataTooltip>
                            <lvc:DefaultTooltip SelectionMode="SharedYValues" Background="White" Foreground="#374151" BulletSize="10"/>
                        </lvc:PieChart.DataTooltip>

                    </lvc:PieChart>

                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.ColumnSpan="2" BorderThickness="0,1,0,0" BorderBrush="#E5E7EB" VerticalAlignment="Top"/>

                        <StackPanel Grid.Column="0" Margin="0,20,0,0">
                            <TextBlock Text="Tổng doanh thu" FontSize="14" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding TotalRevenue}" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,20,0,0" HorizontalAlignment="Right">
                            <TextBlock Text="Số tháng ghi nhận" FontSize="14" Foreground="#6B7280" HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding TotalMonths}" FontSize="24" FontWeight="Bold" Foreground="#111827" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>