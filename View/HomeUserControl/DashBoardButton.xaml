<UserControl x:Class="PageNavigation.View.HomeUserControl.DashBoardButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PageNavigation.View.HomeUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="250">
    <Grid>
        <Border CornerRadius="20" 
            Background="#FFFFFF" 
            BorderBrush="Transparent" 
            BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Border BorderBrush="LightGray"
                            BorderThickness="0, 0, 0, 1">
                        <Grid>
                            <StackPanel>
                                <TextBlock x:Name="title"
                                       x:FieldModifier="public"
                                       FontSize="20"
                                       FontFamily="/Fonts/#Fz Rubik Med"
                                       Margin="20, 20, 0, 0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"/>
                                <TextBlock x:Name="number"
                                       x:FieldModifier="public"
                                       FontSize="40"
                                       FontFamily="/Fonts/#Fz Rubik Med"
                                       Margin="20, 10, 0, 0"
                                       Foreground="Black"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"/>
                            </StackPanel>
                            <Image x:Name="picture"
                                   Height="30"
                                   Width="30"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="10"
                                   Stretch="Uniform"/>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Row="1">
                    <Button BorderBrush="Transparent"
                            HorizontalContentAlignment="Left">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="0, 0, 20, 20">
                                    <ContentPresenter HorizontalAlignment="Left" 
                                                      VerticalAlignment="Center" 
                                                      Margin="20,0,0,0"
                                                      />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="DarkGray"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <TextBlock x:Name="xem"
                                       Text="Xem >"
                                       FontSize="20"
                                       FontFamily="/Fonts/#Fz Rubik Med"/>
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
