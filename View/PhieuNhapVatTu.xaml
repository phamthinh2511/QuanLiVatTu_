<UserControl x:Class="PageNavigation.View.PhieuNhapVatTu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1215"
             Style="{StaticResource Page_Style}">

    <Grid Background="#212529">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="590"/>
            <RowDefinition Height="110"/>
        </Grid.RowDefinitions>

        <!-- ======================= TIÊU ĐỀ ======================= -->
        <Grid>
            <TextBlock Style="{StaticResource Font_Style}"
                       FontSize="50"
                       Text="Phiếu Nhập Vật Tư"
                       Margin="20, 0, 0, 0"/>
        </Grid>

        <!-- ======================= FORM + TABLE ======================= -->
        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="440"/>
            </Grid.RowDefinitions>

            <!-- =========== FORM THÔNG TIN =========== -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,50,0">

                    <TextBlock Text="Ngày nhập:" 
           Style="{StaticResource Text_Style}"
           Foreground="#0bcdff" FontSize="20"/>

                    <Grid Height="50">
                        <Border Background="#2d3135" CornerRadius="10"/>
                        <TextBox Text="{Binding NgayNhap, StringFormat='dd/MM/yyyy'}"
             FontSize="20"
             Foreground="#CED565"
             Background="Transparent"
             BorderThickness="0"
             IsReadOnly="True"
             VerticalContentAlignment="Center"
             Padding="10,0,0,0"
             FontFamily="/Fonts/#Fz Rubik Med" />
                    </Grid>
                    <TextBlock Text="Họ và tên nhân viên:"
                   Style="{StaticResource Text_Style}"
                   Foreground="#0bcdff" FontSize="20"
                   />

                    <Grid Height="50">
                        <Border Background="#2d3135" CornerRadius="10"/>
                        <TextBox Text="{Binding TenNhanVien}"
                     Style="{StaticResource TextBoxStyle}"
                     FontSize="20" 
                     Foreground="#CED565"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"
                     Padding="10,0,0,0"
                     FontFamily="/Fonts/#Fz Rubik Med" Margin="0,-10,0,10"/>
                    </Grid>

                </StackPanel>

                <StackPanel Grid.Column="1">

                    <TextBlock Text="Họ và tên nhà cung cấp:"
                   Style="{StaticResource Text_Style}"
                   Foreground="#0bcdff" FontSize="20"
                   Margin="0,0,0,5"/>

                    <Grid Height="50">
                        <Border Background="#2d3135" CornerRadius="10"/>
                        <TextBox Text="{Binding NhaCungCap}"
                     Style="{StaticResource TextBoxStyle}"
                     FontSize="20" 
                     Foreground="#CED565"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"
                     Padding="10,0,0,0"
                     FontFamily="/Fonts/#Fz Rubik Med"/>
                    </Grid>

                </StackPanel>
            </Grid>

            <!-- =========== DANH SÁCH VẬT TƯ =========== -->
            <ListView Grid.Row="1"
                      ItemsSource="{Binding ListVatTu}"
                      FontFamily="/Fonts/#Fz Rubik Med"
                      FontSize="20"
                      Foreground="#CED565"
                      Background="Transparent"
                      BorderThickness="0"
                      AlternationCount="2">

                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{StaticResource CustomHeader_Style}">
                        <GridViewColumn Header="Mã " Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MaPhieuNhap}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Tên vật tư" Width="160">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TenVatTu}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Số Lượng" Width="140">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SoLuong}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Đơn Vị Tính" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DonVi}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Đơn giá nhập" Width="170">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DonGiaNhap}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Thành tiền" Width="160">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ThanhTien}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Tỉ lệ đơn giá bán" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TyLeLai}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Giá bán" Width="170">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DonGiaBan}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>

                <!-- Style ListViewItem giống Khách Hàng -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="Bd" CornerRadius="10" Background="{TemplateBinding Background}">
                                        <GridViewRowPresenter Content="{TemplateBinding Content}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#17191a"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#3E444A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#50555b"/>
                                <Setter Property="Foreground" Value="#0bcdff"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

            </ListView>

        </Grid>

        <Grid Grid.Row="2">

            <TextBlock Text="{Binding TongTien, StringFormat='Tổng tiền: {0}'}"
                       Foreground="White"
                       FontSize="35"
                       HorizontalAlignment="Left"
                       Margin="20,0,0,0"/>

            <!-- NÚT LƯU -->
            <Button Click="ButtonCreate_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="70"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="Margin" Value="20"/>
                        <Setter Property="Background" Value="#17191a"/>
                        <Setter Property="Content" Value="Tạo Mới"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontFamily" Value="/Fonts/#Fz Rubik Med"/>
                        <Setter Property="FontSize" Value="40"/>
                        <Setter Property="Foreground" Value="#CED565"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
								CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center"
											  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <!-- Hover -->
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#50555b"/>
                                <Setter Property="Foreground" Value="#0bcdff"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>
                </Button.Style>
            </Button>


            <!-- NÚT XEM/SỬA -->
            <Button Click="ButtonEdit_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="70"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="Margin" Value="0,0,300,0"/>
                        <Setter Property="Background" Value="#17191a"/>
                        <Setter Property="Content" Value="Xem/Sửa"/>
                        <Setter Property="FontFamily" Value="/Fonts/#Fz Rubik Med"/>
                        <Setter Property="FontSize" Value="40"/>
                        <Setter Property="Foreground" Value="#CED565"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#50555b"/>
                                <Setter Property="Foreground" Value="#0bcdff"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- NÚT XÓA -->
            <Button Click="ButtonDelete_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="70"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="Margin" Value="0,0,580,0"/>
                        <Setter Property="Background" Value="#17191a"/>
                        <Setter Property="Content" Value="Xóa"/>
                        <Setter Property="FontFamily" Value="/Fonts/#Fz Rubik Med"/>
                        <Setter Property="FontSize" Value="40"/>
                        <Setter Property="Foreground" Value="#CED565"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#50555b"/>
                                <Setter Property="Foreground" Value="#0bcdff"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>

    </Grid>
</UserControl>
