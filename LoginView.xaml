<Window x:Class="PageNavigation.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PageNavigation"
        xmlns:vm="clr-namespace:PageNavigation.ViewModel"
        mc:Ignorable="d"
        xmlns:util="clr-namespace:PageNavigation.Utilities"
        
        util:WindowHelper.EnableDrag="True"
        Title="Đăng nhập"
        Height="600" Width="900"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        >

    <Window.DataContext>
        <vm:LoginVM/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/Charity Gala Event Fundraiser Non-profit Website in Dark Green Beige Style (1).png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Name="closebutton" Style="{StaticResource ExitApp}" Grid.Column="1" Grid.Row="1" Height="40" Width="40" Margin="20,30,30,20" BorderThickness="0" Click="closebutton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/shutdown_mo.png"/>
            </Button.Background>
        </Button>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="PHẦN MỀM QUẢN " FontSize="48" FontWeight="Bold" Foreground="White" TextAlignment="Center" Margin="20, 0, 0, 0"/>
            <TextBlock Text="LÝ VẬT TƯ" FontSize="48" FontWeight="Bold" Foreground="White" TextAlignment="Center" Margin="20, 0, 0, 0"/>
            <TextBlock Text="Ứng dụng quản lý – Theo dõi – Báo cáo vật tư" FontSize="20" Foreground="#e0e0e0" TextAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Border Width="380" Background="White" CornerRadius="10" BorderBrush="#e0e0e0" BorderThickness="1" Margin="40, 90, 40, 40" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="40">

                    <Image Source="/Images/logo_icon.png" Width="100" Height="100" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,0,0"/>
                    <TextBlock Text="ĐĂNG NHẬP" FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <Border BorderBrush="#aaa" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/icon_account.png" Width="20" Height="20" HorizontalAlignment="Center"/>

                            <TextBox x:Name="txtUser"
                                     TextChanged="Form_Changed"
                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                     Grid.Column="1" FontSize="14" Foreground="Gray" BorderThickness="0" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border BorderBrush="#aaa" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Images/icon_password.png" Width="20" Height="20" HorizontalAlignment="Center"/>

                            <PasswordBox x:Name="MyPasswordBox"
                                         PasswordChanged="MyPasswordBox_PasswordChanged"
                                         Grid.Column="1" FontSize="14" BorderThickness="0" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap"/>

                    <Button x:Name="btnLogin"
                            IsEnabled="False"
                            Content="ĐĂNG NHẬP"
                            Click="Button_Click"
                            IsDefault="True"
                            Background="#34c759" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0" Margin="0,0,0,20" Padding="12">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Border>
        </StackPanel>

        <Grid x:Name="LoadingOverlay" Grid.Column="0" Grid.ColumnSpan="2" Visibility="Collapsed" Background="#CC000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="80" Height="80" BorderThickness="0" Background="Transparent" Foreground="#34c759"/>
                <TextBlock Text="Đang kết nối hệ thống..." Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>